# Hermes Autonomous AI Assistant - Environment Configuration Example
# Copy this file to .env and update with your actual values

# === Core Application Settings ===
HERMES_SECRET_KEY=your-secret-key-here-change-this-in-production
HERMES_ENV=development  # development, staging, production
DEBUG=true

# === Database Configuration ===
DATABASE_URL=sqlite:///data/hermes.db
REDIS_URL=redis://localhost:6379/0

# === Backend API Keys ===
# IMPORTANT: Replace these with your actual API keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# === Email Configuration (for alerts and notifications) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=hermes@your-domain.com
EMAIL_TO=admin@your-domain.com

# === Monitoring and Analytics ===
GRAFANA_PASSWORD=your-grafana-password-here
POSTGRES_PASSWORD=your-postgres-password-here

# === File Paths ===
UPLOAD_FOLDER=/opt/hermes/uploads
DATA_DIR=/opt/hermes/data
CACHE_DIR=/opt/hermes/cache
LOG_DIR=/var/log/hermes
BACKUP_DIR=/opt/hermes/backups
CONFIG_DIR=/opt/hermes/config

# === Security Settings ===
CORS_ORIGINS=http://localhost:8080,http://localhost:3000
CSRF_PROTECTION=true
SESSION_TIMEOUT=7200  # 2 hours in seconds

# === Performance Settings ===
MAX_WORKERS=4
THREAD_POOL_SIZE=50
CONNECTION_POOL_SIZE=20
CACHE_WARMUP=true
CACHE_WARMUP_SIZE=1000

# === Autonomous Development Settings ===
AUTO_MODIFY_SAFE=true
AUTO_LEARN_RATE=0.1
SELF_HEALING_ENABLED=true
AUTO_OPTIMIZER_ENABLED=true

# === Budget and Cost Management ===
DAILY_BUDGET_CENTS=500  # $5.00 per day
MONTHLY_BUDGET_CENTS=15000  # $150.00 per month
COST_TRACKING_ENABLED=true

# === Logging Configuration ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_ROTATION=daily
LOG_RETENTION_DAYS=90

# === Feature Flags ===
ENABLE_AUTONOMOUS_MODE=true
ENABLE_SELF_MODIFICATION=true
ENABLE_AUTONOMOUS_LEARNING=true
ENABLE_SELF_HEALING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_THREAT_DETECTION=true
ENABLE_PERFORMANCE_MONITORING=true

# === Experimental Features (use with caution) ===
ENABLE_EXPERIMENTAL_ML_FEATURES=false
ENABLE_ADVANCED_CODE_GENERATION=false
ENABLE_CROSS_SYSTEM_INTEGRATION=false

# === Development Settings ===
FRUGAL_ALLOW_REMOTE=0  # Set to 1 to allow remote backend usage in development