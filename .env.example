# Hermes Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
HERMES_DEBUG=false
HERMES_HOST=0.0.0.0
HERMES_PORT=5000
HERMES_SECRET_KEY=change-this-in-production
HERMES_DB_PATH=hermes.db
HERMES_LOG_DIR=logs

# Remote Execution (set to 1 to enable)
HERMES_ALLOW_REMOTE=0
HERMES_TIMEOUT=300

# Meta-Learning
HERMES_METALEARNING_ENABLED=true
HERMES_METALEARNING_MAX_QUESTIONS=3

# Tailscale Configuration (for Talos communication)
TAILSCALE_API_KEY=your_tailscale_api_key
TAILSCALE_NETWORK=your_tailscale_network

# Talos Configuration (Remote execution endpoint)
TALOS_ENDPOINT=http://100.100.100.100:8080

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Monitoring
MONITORING_COLLECTION_INTERVAL=60
MONITORING_RETENTION_DAYS=30

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0

# Alert Thresholds
THRESHOLDS_CPU_WARNING=80.0
THRESHOLDS_CPU_CRITICAL=95.0
THRESHOLDS_MEMORY_WARNING=80.0
THRESHOLDS_MEMORY_CRITICAL=95.0
THRESHOLDS_DISK_WARNING=85.0
THRESHOLDS_DISK_CRITICAL=95.0